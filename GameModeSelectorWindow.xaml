<Window x:Class="QuizGame1WPF.GameModeSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Game Mode" Height="250" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Select Game Mode:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ComboBox x:Name="cmbGameModes" Margin="0,0,0,10" Height="30">
                <ComboBoxItem Content="Solo Challenge"/>
                <ComboBoxItem Content="Team Battle"/>
                <ComboBoxItem Content="Time Attack"/>
                <ComboBoxItem Content="Elimination Mode"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="75" Margin="5" Click="OK_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
