<Window x:Class="QuizGame1WPF.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Game" Height="350" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtQuestion" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" />

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <RadioButton x:Name="optA" Content="Option A" GroupName="Options" Margin="0,5"/>
            <RadioButton x:Name="optB" Content="Option B" GroupName="Options" Margin="0,5"/>
            <RadioButton x:Name="optC" Content="Option C" GroupName="Options" Margin="0,5"/>
            <RadioButton x:Name="optD" Content="Option D" GroupName="Options" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Time Left:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock x:Name="txtTimer" FontWeight="Bold" Foreground="Red" Width="40"/>
            <Button Content="Submit" Margin="10,0,0,0" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
