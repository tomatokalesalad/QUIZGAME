<Window x:Class="QuizGame1WPF.QuizWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="500" Width="658"
        WindowStartupLocation="CenterScreen"
        Background="#FF181A1B">
    <Border BorderBrush="#22FFD9" BorderThickness="4" CornerRadius="30" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Question Area -->
            <Border Grid.Row="0" Background="Aquamarine" CornerRadius="20" Margin="20" Padding="20" BorderBrush="#22FFD9" BorderThickness="2">
                <TextBlock x:Name="txtQuestion"
                           FontSize="26"
                           FontWeight="Bold"
                           FontStyle="Italic"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Answers Area -->
            <Grid Grid.Row="1" Margin="30,62,10,28" Grid.RowSpan="2" RenderTransformOrigin="0.555,0.496">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- A -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,20" VerticalAlignment="Center">
                    <TextBlock Text="A." FontWeight="Bold" FontSize="22" Foreground="#22FFD9" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="40" Background="#11F6FF" Foreground="#222" FontSize="18" BorderThickness="2" BorderBrush="#22FFD9"/>
                </StackPanel>
                <!-- B -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                    <TextBlock Text="B." FontWeight="Bold" FontSize="22" Foreground="#22FFD9" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="40" Background="#11F6FF" Foreground="#222" FontSize="18" BorderThickness="2" BorderBrush="#22FFD9" RenderTransformOrigin="0.5,0.5">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="-0.281"/>
                                <RotateTransform/>
                                <TranslateTransform Y="-0.49"/>
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>
                </StackPanel>
                <!-- C -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="C." FontWeight="Bold" FontSize="22" Foreground="#22FFD9" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="40" Background="#11F6FF" Foreground="#222" FontSize="18" BorderThickness="2" BorderBrush="#22FFD9"/>
                </StackPanel>
                <!-- D -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="D." FontWeight="Bold" FontSize="22" Foreground="#22FFD9" Margin="0,0,10,0"/>
                    <TextBox Width="200" Height="40" Background="#11F6FF" Foreground="#222" FontSize="18" BorderThickness="2" BorderBrush="#22FFD9"/>
                </StackPanel>
            </Grid>

            <!-- Time Left and Submit Button -->
            <Grid Grid.Row="2" Margin="20,10,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Time Left: 00:30"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="Aquamarine"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                <Button Content="Submit"
                        Width="120"
                        Height="40"
                        Background="#22FFD9"
                        Foreground="#222"
                        FontWeight="Bold"
                        FontSize="18"
                        Margin="0,0,0,0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>
