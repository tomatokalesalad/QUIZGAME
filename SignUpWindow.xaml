<Window x:Class="QuizGame1WPF.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Border Background="#2C2C3A" Padding="20" CornerRadius="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Create Account" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username" Foreground="White"/>
                <TextBox x:Name="UsernameInput" Height="30" Background="#444" Foreground="White" BorderBrush="#555"/>

                <TextBlock Text="Password" Foreground="White" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordInput" Height="30" Background="#444" Foreground="White" BorderBrush="#555"/>

                <TextBlock Text="Confirm Password" Foreground="White" Margin="0,10,0,0"/>
                <PasswordBox x:Name="ConfirmPasswordInput" Height="30" Background="#444" Foreground="White" BorderBrush="#555"/>

                <Button Content="Sign Up" Click="SignUpButton_Click"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"
                        Height="35" Margin="0,20,0,0" BorderBrush="Transparent" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
