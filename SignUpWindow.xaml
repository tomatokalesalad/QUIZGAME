<Window x:Class="QuizGame1WPF.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="350" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#ECEFF1">
        <Border CornerRadius="12" Background="White" Padding="20" Margin="40">
            <StackPanel>
                <TextBlock Text="Create Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Username"/>
                <TextBox x:Name="UserBox" Margin="0,4"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="PassBox" Margin="0,4"/>

                <TextBlock Text="Role"/>
                <ComboBox x:Name="RoleBox" Margin="0,4">
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Teacher"/>
                </ComboBox>

                <TextBlock Text="ID"/>
                <TextBox x:Name="IdBox" Margin="0,4"/>

                <Button Content="Create Account" Click="Create_Click" Margin="0,16,0,0"
                        Background="#4CAF50" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
