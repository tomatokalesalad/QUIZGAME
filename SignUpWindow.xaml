<Window x:Class="QuizGame1WPF.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="580"
        Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#23235B">

    <Border BorderBrush="#00FFD9" BorderThickness="3" CornerRadius="20" Padding="30" Margin="20,20,20,21" Background="#202324">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Create Account"
                       Foreground="#00FFD9"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <Border Grid.Row="1"
                    Background="#23282F"
                    BorderBrush="#00FFD9"
                    BorderThickness="2"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="260">
                    <TextBlock Text="Username" Foreground="#00FFD9" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="UserBox"
                             FontSize="16"
                             Background="#23282F"
                             Foreground="#00FFD9"
                             BorderBrush="#00FFD9"
                             BorderThickness="2"
                             Padding="6"
                             Margin="0,0,0,8"/>

                    <TextBlock Text="Password" Foreground="#00FFD9" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="PassBox"
                                 FontSize="16"
                                 Background="#23282F"
                                 Foreground="#00FFD9"
                                 BorderBrush="#00FFD9"
                                 BorderThickness="2"
                                 Padding="6"
                                 Margin="0,0,0,8"/>

                    <TextBlock Text="Role" Foreground="#00FFD9" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox x:Name="RoleBox"
                              FontSize="16"
                              Background="#23282F"
                              Foreground="#00FFD9"
                              BorderBrush="#00FFD9"
                              BorderThickness="2"
                              Padding="6"
                              Margin="0,0,0,8"
                              Height="32">
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Teacher"/>
                    </ComboBox>

                    <TextBlock Text="ID" Foreground="#00FFD9" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="IdBox"
                             FontSize="16"
                             Background="#23282F"
                             Foreground="#00FFD9"
                             BorderBrush="#00FFD9"
                             BorderThickness="2"
                             Padding="6"
                             Margin="0,0,0,8"/>
                </StackPanel>
            </Border>

            <!-- Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Create"
                        Width="160"
                        Height="45"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="#00FFD9"
                        Foreground="#222"
                        BorderBrush="#00FFD9"
                        Cursor="Hand"
                        Click="Create_Click"
                        Padding="5"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
