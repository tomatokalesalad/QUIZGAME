<Window x:Class="QuizGame1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Game Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#ECEFF1">
        <Border Background="White" CornerRadius="12" Padding="20" Margin="40">
            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold"
                           Foreground="#2C3E50" Margin="0,0,0,20"/>
                <TextBlock Text="Username"/>
                <TextBox x:Name="UsernameBox" Margin="0,4"/>
                <TextBlock Text="Password"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,4"/>
                <TextBlock Text="Role"/>
                <ComboBox x:Name="RoleBox" Margin="0,4">
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Teacher"/>
                </ComboBox>
                <Button Content="Login" Click="Login_Click"
                        Margin="0,10,0,0" Background="#4CAF50" Foreground="White"/>
                <Button Content="Sign Up" Click="SignUp_Click"
                        Margin="0,6,0,0" Background="#2196F3" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
