<Window x:Class="QuizGame1WPF.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="400"
        Width="420"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Account"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#00E5FF"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Username" Foreground="White"/>
            <TextBox x:Name="usernameTextBox"
                     Margin="0,5"
                     Background="#2E2E3E"
                     Foreground="White"
                     FontSize="14"/>

            <TextBlock Text="Password" Margin="0,10,0,0" Foreground="White"/>
            <PasswordBox x:Name="passwordBox"
                         Margin="0,5"
                         Background="#2E2E3E"
                         Foreground="White"
                         FontSize="14"/>

            <TextBlock Text="Confirm Password" Margin="0,10,0,0" Foreground="White"/>
            <PasswordBox x:Name="confirmPasswordBox"
                         Margin="0,5"
                         Background="#2E2E3E"
                         Foreground="White"
                         FontSize="14"/>

            <Button Content="Sign Up"
                    Click="SignUpButton_Click"
                    Margin="0,20,0,0"
                    Padding="10"
                    Background="#00E5FF"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
