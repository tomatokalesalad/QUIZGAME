<Window x:Class="QuizGame1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Game Login"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#181A1B">

    <Border BorderBrush="#22FFD9" BorderThickness="3" CornerRadius="20" Padding="30" Margin="20" Background="#202324">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="Quiz Game Login"
                           Foreground="#22FFD9"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="260">
                <TextBlock Text="Username" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="UsernameBox"
                         FontSize="16"
                         Background="#262B2D"
                         Foreground="White"
                         BorderBrush="#22FFD9"
                         BorderThickness="2"
                         Padding="6"
                         Margin="0,0,0,8"/>

                <TextBlock Text="Password" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox"
                             FontSize="16"
                             Background="#262B2D"
                             Foreground="White"
                             BorderBrush="#22FFD9"
                             BorderThickness="2"
                             Padding="6"
                             Margin="0,0,0,8"/>

                <TextBlock Text="Role" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <ComboBox x:Name="RoleBox"
                          FontSize="16"
                          Background="#262B2D"
                          Foreground="White"
                          BorderBrush="#22FFD9"
                          BorderThickness="2"
                          Padding="6"
                          Margin="0,0,0,8"
                          Height="32">
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Teacher"/>
                </ComboBox>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Login"
                        Width="110"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#22FFD9"
                        Foreground="#222"
                        BorderBrush="#22FFD9"
                        Cursor="Hand"
                        Click="Login_Click"
                        Padding="5"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
                <Button Content="Sign Up"
                        Width="110"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#22FFD9"
                        Foreground="#222"
                        BorderBrush="#22FFD9"
                        Cursor="Hand"
                        Click="SignUp_Click"
                        Padding="5"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
