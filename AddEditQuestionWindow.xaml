<Window x:Class="QuizGame1WPF.AddEditQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Edit Question" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10" RowDefinitions="Auto,*,Auto">
        <StackPanel Margin="10" VerticalAlignment="Top" Spacing="8">

            <TextBox x:Name="txtQuestion" PlaceholderText="Enter question..." />
            <TextBox x:Name="txtOptionA" PlaceholderText="Option A" />
            <TextBox x:Name="txtOptionB" PlaceholderText="Option B" />
            <TextBox x:Name="txtOptionC" PlaceholderText="Option C" />
            <TextBox x:Name="txtOptionD" PlaceholderText="Option D" />
            <ComboBox x:Name="cmbCorrect" PlaceholderText="Correct Answer">
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="D"/>
            </ComboBox>
            <TextBox x:Name="txtCategory" PlaceholderText="Category" />
            <ComboBox x:Name="cmbDifficulty" PlaceholderText="Difficulty">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
