<Window x:Class="QuizGame1WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="330" Width="360"
        WindowStartupLocation="CenterScreen">
	<Grid Background="#ECEFF1" Margin="20">
		<Border CornerRadius="12" Background="White" Padding="20">
			<StackPanel>
				<TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

				<TextBlock Text="Username" Margin="0,0,0,4"/>
				<TextBox x:Name="UsernameBox" Margin="0,0,0,12"/>

				<TextBlock Text="Password" Margin="0,0,0,4"/>
				<PasswordBox x:Name="PasswordBox" Margin="0,0,0,12"/>

				<TextBlock Text="Role" Margin="0,0,0,4"/>
				<ComboBox x:Name="RoleBox" Margin="0,0,0,16">
					<ComboBoxItem Content="Student"/>
					<ComboBoxItem Content="Teacher"/>
				</ComboBox>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<Button Content="Login" Click="Login_Click" Margin="0,0,8,0" Width="100"/>
					<Button Content="Sign Up" Click="SignUp_Click" Width="100"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Window>
