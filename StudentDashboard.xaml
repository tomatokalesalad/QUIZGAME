<Window x:Class="QuizGame1WPF.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Dashboard"
        Height="595"
        Width="1068"
        WindowStartupLocation="CenterScreen"
        Background="#23235B">

    <Border BorderBrush="#00FFD9" BorderThickness="3" CornerRadius="20" Padding="30" Margin="20,20,0,20" Background="#202324" HorizontalAlignment="Left" Width="1028">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="{Binding WelcomeMessage, FallbackValue=Student Dashboard}"
                       Foreground="#00FFD9"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Main Actions -->
            <Border Grid.Row="1"
                    Background="#23282F"
                    BorderBrush="#00FFD9"
                    BorderThickness="2"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="260">
                    <Button x:Name="btnStartQuiz"
                            Content="Start Quiz"
                            Height="40"
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#00FFD9"
                            Foreground="#222"
                            BorderBrush="#00FFD9"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="StartQuiz_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="22">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="btnViewResults"
                            Content="View Results"
                            Height="40"
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#00FFD9"
                            Foreground="#222"
                            BorderBrush="#00FFD9"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="ViewResults_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="22">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="btnLogout"
                            Content="Logout"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#00FFD9"
                            Foreground="#222"
                            BorderBrush="#00FFD9"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="Logout_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="22">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Footer (optional, e.g. for version or info) -->
            <!--
            <TextBlock Grid.Row="2"
                       Text="v1.0"
                       Foreground="#00FFD9"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            -->
        </Grid>
    </Border>
</Window>
