<Window x:Class="QuizGame1WPF.QuizResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Results"
        Height="500"
        Width="975"
        WindowStartupLocation="CenterScreen"
        Background="#181A1B">

    <Window.Resources>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="#22FFD9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border
                            Background="#262B2D"
                            CornerRadius="12"
                            BorderBrush="#22FFD9"
                            BorderThickness="1"
                            Padding="6,0,6,0"
                            Margin="2,2,2,2">
                            <ContentPresenter
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#22FFD9" BorderThickness="3" CornerRadius="20" Padding="30" Margin="20" Background="#202324">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="Quiz Results"
                           Foreground="#22FFD9"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Results List -->
            <Border Background="#262B2D" CornerRadius="15" Padding="20" BorderBrush="#22FFD9" BorderThickness="2" Margin="0,0,0,20" HorizontalAlignment="Center" Grid.Row="1" Width="869">
                <ListView x:Name="lvResults"
                          Background="Transparent"
                          BorderThickness="0"
                          AlternationCount="2"
                          SelectionChanged="lvResults_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0,0,0,10"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Date" Width="120" DisplayMemberBinding="{Binding Date}" />
                            <GridViewColumn Header="Category" Width="120" DisplayMemberBinding="{Binding Category}" />
                            <GridViewColumn Header="Difficulty" Width="120" DisplayMemberBinding="{Binding Difficulty}" />
                            <GridViewColumn Header="Score" Width="120" DisplayMemberBinding="{Binding ScoreDisplay}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Footer with Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Close"
                        Width="160"
                        Height="45"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="#22FFD9"
                        Foreground="#222"
                        BorderBrush="#22FFD9"
                        Cursor="Hand"
                        Click="Close_Click"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Center"
                        Padding="5"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
