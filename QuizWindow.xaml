<Window x:Class="QuizGame1WPF.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#23235B"> <!-- Match SignUpWindow background -->
    <Border BorderBrush="#00FFD9" BorderThickness="3" CornerRadius="20" Padding="30" Margin="20" Background="#202324">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Quiz Time!"
                       Foreground="#00FFD9"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <!-- Question and Options -->
            <Border Grid.Row="1"
                    Background="#23282F"
                    BorderBrush="#00FFD9"
                    BorderThickness="2"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                    <TextBlock Text="{Binding QuestionText}" Foreground="#00FFD9" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <RadioButton x:Name="optA" Content="{Binding OptionA}" GroupName="Options" FontSize="16" Foreground="#00FFD9" Margin="0,0,0,8"/>
                    <RadioButton x:Name="optB" Content="{Binding OptionB}" GroupName="Options" FontSize="16" Foreground="#00FFD9" Margin="0,0,0,8"/>
                    <RadioButton x:Name="optC" Content="{Binding OptionC}" GroupName="Options" FontSize="16" Foreground="#00FFD9" Margin="0,0,0,8"/>
                    <RadioButton x:Name="optD" Content="{Binding OptionD}" GroupName="Options" FontSize="16" Foreground="#00FFD9" Margin="0,0,0,8"/>
                </StackPanel>
            </Border>
            <!-- Timer and Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock x:Name="txtTimer" FontSize="18" Foreground="#00FFD9" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="btnSubmit" Content="Submit" Width="120" Height="40" Margin="0,0,8,0" Click="Submit_Click"
                        Background="#00FFD9" Foreground="#222" FontWeight="Bold" BorderBrush="#00FFD9" BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnSkip" Content="Skip" Width="120" Height="40" Click="Skip_Click"
                        Background="#23282F" Foreground="#00FFD9" FontWeight="Bold" BorderBrush="#00FFD9" BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
